<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Avge_Auto_left_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/avge_backgrund_fm"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="查询时间：04-19 16：:21"
            android:textColor="@color/home_head_text"
            android:textSize="@dimen/dp_15" />


        <ImageView
            android:layout_width="@dimen/x61"
            android:layout_height="@dimen/y50"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/y5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y11"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/y5"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/bg_home_rectangle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/y5"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/avge_iv_bg"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:src="@drawable/avge_capacity" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5212.0L"
                        android:textColor="@color/home_body_text"
                        android:textSize="@dimen/dp_25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="容量"
                        android:textColor="@color/home_body_text"
                        android:textSize="@dimen/dp_13" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/bg_home_rectangle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/y5"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/avge_iv_bg"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:src="@drawable/avge_residue" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5212.0L"
                        android:textColor="@color/home_body_text"
                        android:textSize="@dimen/dp_25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计燃料剩余时间"
                        android:textColor="@color/home_body_text"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y1"
            >
            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/y6"
                android:src="@drawable/avge_auto_state"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="状态正常"
                android:textColor="@color/home_head_text"
                android:textSize="@dimen/dp_20"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>