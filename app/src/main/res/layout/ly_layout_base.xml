<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#204C88"
    android:id="@+id/base_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y5"
        android:background="@drawable/bg_home_gray_line"
        android:id="@+id/base_gray_bg"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30">

        <ImageView
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/y4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/base_left"
            android:src="@drawable/avge_persen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="136****8010"
            android:textColor="@color/home_head_text"
            android:id="@+id/base_middle"
            android:textSize="@dimen/dp_20" />

        <ImageView
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/y4"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:id="@+id/base_right"
            android:src="@drawable/avge_note" />
    </RelativeLayout>
    <ViewFlipper
        android:id="@+id/layout_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f6" />
</LinearLayout>
