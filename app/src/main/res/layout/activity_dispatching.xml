<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_dispatching"

    tools:context=".fragment.HomeAvgeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y5"
            android:background="@drawable/bg_dispatching_gray_line"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/x7"
                android:layout_height="@dimen/y4"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/ly_return"
                android:id="@+id/dp_return"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="订单列表"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20" />

            <ImageView
                android:layout_width="@dimen/x7"
                android:layout_height="@dimen/y4"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:src="@drawable/avge_note"
                android:id="@+id/dp_ewm"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y3"
            android:layout_marginBottom="@dimen/y2"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未配送"
                android:layout_gravity="center"
                android:textSize="@dimen/dp_15"
                android:id="@+id/order_not"
                android:textColor="@color/white"
                android:background="@drawable/bg_order_bt1"
                android:paddingLeft="@dimen/x7"
                android:paddingRight="@dimen/x7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已配送"
                android:layout_gravity="center"
                android:textSize="@dimen/dp_15"
                android:id="@+id/order_already"
                android:textColor="@color/home_head_text"
                android:background="@drawable/bg_white_gray2"
                android:paddingLeft="@dimen/x7"
                android:paddingRight="@dimen/x7"
                />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y28"
        android:background="#F2EBEB"
        >

    </FrameLayout>
    <com.example.lyfuelgas.view.NoSlidingViewPager
        android:id="@+id/dp_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y73"
        android:layout_marginTop="@dimen/y19"
        android:layout_marginLeft="@dimen/x3"
        android:layout_marginRight="@dimen/x3"
        >
    </com.example.lyfuelgas.view.NoSlidingViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y8"
        android:layout_gravity="bottom"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y4"
            android:layout_gravity="center"
            android:background="@drawable/bg_blue_line"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/dp_find"
            android:orientation="horizontal"
            >
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/y2"
            android:src="@drawable/avge_auto_close"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:id="@+id/dp_all_iv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x1"
            android:textSize="@dimen/sp_17"
            android:id="@+id/dp_all_tv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计（113）"
            android:id="@+id/dp_count"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_17"
            android:layout_marginLeft="@dimen/x2"
            android:textColor="@color/white"
            android:background="@drawable/bg_sky_blue_gray"
            android:paddingLeft="@dimen/x2"
            android:paddingRight="@dimen/x1"
            android:paddingTop="@dimen/x1"
            android:paddingBottom="@dimen/x1"
            />

    </LinearLayout>
</FrameLayout>