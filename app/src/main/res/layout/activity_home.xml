<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
     android:id="@+id/home_vp"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
        android:layout_above="@+id/home_ll"
        >
     </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:id="@+id/home_ll"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <LinearLayout android:id="@+id/home_ll_home"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:background="@drawable/selector_home_tab"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_avge"
                android:src="@drawable/home_avge"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_margin="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/home_ll_discount"
            android:background="@drawable/selector_home_tab"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/home_discount"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_secondary"
                android:text="优惠"
                android:textColor="@color/home_text"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/home_ll_camer"
            android:background="@drawable/selector_home_tab"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/home_camer"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_secondary"
                android:text="摄像头"
                android:textColor="@color/home_text"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/home_ll_news"
            android:background="@drawable/selector_home_tab"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/home_order"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"
                android:textSize="@dimen/text_secondary"
                android:textColor="@color/home_text"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/home_ll_account"
            android:background="@drawable/selector_home_tab"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/home_persen_iv"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="@dimen/text_secondary"
                android:textColor="@color/home_text"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>