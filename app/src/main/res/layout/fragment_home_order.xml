<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/order_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y5"
        android:background="@drawable/bg_home_gray_line"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30">

        <ImageView
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/y4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:visibility="gone"
            android:src="@drawable/ly_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="加注订单"
            android:textColor="@color/home_head_text"
            android:textSize="@dimen/dp_20" />

        <ImageView
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/y4"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@drawable/avge_note" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y3"
        android:layout_marginBottom="@dimen/y2"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_15"
            android:id="@+id/order_now"
            android:textColor="@color/white"
            android:background="@drawable/bg_order_bt1"
            android:paddingLeft="@dimen/x7"
            android:paddingRight="@dimen/x7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_15"
            android:id="@+id/order_control"
            android:textColor="@color/home_head_text"
            android:background="@drawable/bg_white_gray2"
            android:paddingLeft="@dimen/x7"
            android:paddingRight="@dimen/x7"
            />
    </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y24"
        android:background="#F2EBEB">

    </FrameLayout>
    <com.example.lyfuelgas.view.NoSlidingViewPager
        android:id="@+id/order_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y19"
        android:layout_marginLeft="@dimen/x3"
        android:layout_marginRight="@dimen/x3"
        >
    </com.example.lyfuelgas.view.NoSlidingViewPager>
</FrameLayout>